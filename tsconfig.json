{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "*": [
        "@types/*"
      ]
    },
    "experimentalDecorators": true,
    "jsx": "react",
    "outDir": "artifacts",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noErrorTruncation": true,
    "pretty": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/"
    ],
    "noUnusedLocals": true,
    "importHelpers": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": [
    "react",
    "jest"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}
